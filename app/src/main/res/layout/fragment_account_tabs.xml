<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context="com.wildcatbank2.AccountTabs">

    <!-- TODO: Update blank fragment layout -->


    <ImageButton
        android:layout_width="78dp"
        android:layout_height="match_parent"
        android:id="@+id/balanceeButton"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/balance_action_name"
        android:background="#fbf8f8" />

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:id="@+id/transferButton"
        android:layout_gravity="center"
        android:src="@drawable/transfer_action_name"
        android:background="#fbf8f8" />

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:id="@+id/paymentButton"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/payments_action_name"
        android:background="#fbf8f8" />
</FrameLayout>
